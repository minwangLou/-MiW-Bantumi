<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="preferencia">

    <EditTextPreference
        app:key="nombre_jugador"
        app:title="Nombre jugador"
        app:useSimpleSummaryProvider="true"
        app:defaultValue="jugador"/>

    <ListPreference
        app:key="jugador_inical"
        app:title="Jugador Inicial"
        app:defaultValue="Jugador 1"
        app:entries="@array/jugador_inicial"
        app:entryValues="@array/jugador_inicial"
        app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>